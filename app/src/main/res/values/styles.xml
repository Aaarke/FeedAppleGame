<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/green_code</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="sub_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_13sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bold_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="text_you_need" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_13sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif</item>
    </style>

</resources>